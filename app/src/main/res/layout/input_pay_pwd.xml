<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@null"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            >

            <TextView
                android:id="@+id/back"
                style="@style/WrapContent"
                android:textSize="20sp"
                android:paddingLeft="16dp"
                android:textColor="@color/gray_light"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/topeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:padding="16dp"
                android:text="请输入支付密码"
                android:textColor="@color/gray_deep"
                android:textSize="16sp" />

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentRight="true"
            android:background="@color/white_deep" />

        <LinearLayout
            android:id="@+id/layout_input"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"></LinearLayout>

        <RelativeLayout
            android:id="@+id/forget_pwd"
            style="@style/WrapContent"
            android:layout_gravity="right"
            android:layout_marginRight="25dp"
            android:padding="5dp"
            android:layout_marginTop="3dp"
            >
            <TextView
                style="@style/WrapContent"
                android:text="忘记密码"
                android:textColor="@color/main_red_color"
                android:textSize="14sp"
                />

        </RelativeLayout>


        <android.inputmethodservice.KeyboardView
            android:id="@+id/keyboard_view"
            style="@style/Widget.KeyboardView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#ffffff"
            android:focusable="true"
            android:layout_marginTop="25dp"
            android:focusableInTouchMode="true"
            android:keyBackground="@drawable/keyboard_key"
            android:keyPreviewLayout="@layout/preview_layout"
            android:keyTextColor="#353535"
            android:keyTextSize="21.5sp"
            android:labelTextSize="21.5sp"
            android:popupLayout="@layout/preview_layout"
            android:shadowColor="#ffffff"
            android:shadowRadius="0.0"
            android:visibility="gone" />/>

    </LinearLayout>

</RelativeLayout>
